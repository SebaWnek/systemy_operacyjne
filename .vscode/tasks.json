{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc server extended",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/server_ext.c",
                "${workspaceFolder}/commons_ext.c",
                "-lm",
                "-o",
                "${workspaceFolder}/server"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "gcc client extended",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/client_ext.c",
                "${workspaceFolder}/commons_ext.c",
                "-lm",
                "-o",
                "${workspaceFolder}/client"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}